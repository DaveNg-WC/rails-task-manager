<div class="container">
  <h1><%= @task.title %></h1>

  <hr>

  <h3><%= @task.details %></h3>

  <p>
    <%= check_box_tag "completed", "completed", @task.completed %> <%= @done_text %>
  </p>

  <p><%= link_to "Edit task", edit_task_path(@task),:class => "btn btn-primary"  %></p>
  <hr>
  <p><%= link_to "<-- Back to lists", tasks_path %></p>
</div>
