<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag "task_ids[]", task.id, task.completed %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "🗑️", delete_task_path(task.id),
        data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}
%>
    </li>
  <% end %>
</ul>
<hr>
<p><%= link_to "+ Add new task", new_task_path %></p>
